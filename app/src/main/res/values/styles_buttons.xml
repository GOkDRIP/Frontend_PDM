<resources>

    <!-- Estilo general para botones FitLife -->
    <style name="FitLifeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">12dp</item> <!-- Bordes redondeados -->
        <item name="android:textAllCaps">false</item> <!-- Letras normales -->
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Moderna y clara -->
    </style>

</resources>
