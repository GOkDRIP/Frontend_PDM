<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutVerRutinaActual"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nombre de la rutina -->
    <TextView
        android:id="@+id/tvNombreRutina"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcionRutina"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Nivel -->
    <TextView
        android:id="@+id/tvNivelRutina"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Botón para cambiar/asignar -->
    <Button
        android:id="@+id/btnElegirRutina"
        android:text="Elegir Rutina"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progVerActual"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
