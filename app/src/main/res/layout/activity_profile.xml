<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvHeader"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Perfil del Usuario"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <!-- Tarjeta con información del perfil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/backgroundCard"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Nombre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Edad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edad:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Peso -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Altura -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Altura:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Nivel de actividad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nivel de actividad:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvNivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <!-- Objetivo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivo:"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvObjetivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón editar perfil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            style="@style/FitLifeButton"
            android:text="Editar información" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminarCuenta"
            style="@style/FitLifeButton"
            android:layout_width="209dp"
            android:backgroundTint="@color/error"
            android:text="Eliminar mi cuenta"
            android:layout_marginTop="24px"/>



    </LinearLayout>
</ScrollView>
