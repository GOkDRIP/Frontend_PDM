<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Pantalla Entrenamiento"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar_progreso"
        style="@style/FitLifeButton"
        android:text="Registrar Progreso" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_listar_progresos"
        style="@style/FitLifeButton"
        android:text="Ver Progresos" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ir_rutina_principal"
        style="@style/FitLifeButton"
        android:text="Ver Rutina Actual" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_objetivos_dia"
        style="@style/FitLifeButton"
        android:text="Objetivos del Día" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ver_desafios"
        style="@style/FitLifeButton"
        android:text="Ver Desafíos" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mis_desafios"
        style="@style/FitLifeButton"
        android:text="Mis Desafíos" />

</LinearLayout>
